        int end_day = Integer.parseInt(end_date.substring(2,4));
        
        /*for(int i=begin_day; i<=end_day;++i){
        	String emotions = emo.getString(month + "-" + "%02d".format(Integer.toString(i)) + "-2013", "000");
        	String[] emotions_list = emotions.split("");
